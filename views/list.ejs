<%- include("header") -%>

    <body>
        <div class="box" id="heading">
            <h1>
                <%= listTitle %>
            </h1>
        </div>
        <div class="box">
            <%AllTask.forEach(function(Task){ %>
                <form action="/delete" method="post">
                    <div class="item">
                        <input type="checkbox" name="checkbox" value="<%= Task._id%>" onchange="this.form.submit()">
                        <p><%= Task.name %></p>
                    </div>
                    <input type="hidden" name="listName" value=<%=listTitle %>> </input>
                </form>
                <% })%>
                    <form class="item" action="/" method="post">
                        <input name="TaskDesc" type="text" placeholder="Add New Item!" autocomplete="off">
                        <button name="submit" type="submit" value=<%=listTitle %> >+</button>
                    </form>
        </div>
        <%- include("footer") -%>